<!DOCTYPE html>
<html>
  <head>
    <title>Puppy Pad</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <!-- <link href="assets/css/themify-icons.css" rel="stylesheet"> -->

    <!--  Google Maps -->
    <!-- AIzaSyC6Wjop1KflRdaLa-p4GZV3eXkIOkG4K6U -->
    <script src="//maps.google.com/maps/api/js?key=AIzaSyC6Wjop1KflRdaLa-p4GZV3eXkIOkG4K6U"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->



  </head>

  <body>


    <div id="navbar-styling">
      <div class="container">
        <nav class="navbar navbar-light">
          <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
          <div class="collapse navbar-toggleable-md" id="navbarResponsive">
            <a class="navbar-brand" href="#">PUPPY PAD</a>
            <ul class="nav navbar-nav float-xs-right">
              <li class="nav-item">
                <%= link_to "Photos", pet_pet_photos_path(@pet), class:"nav-link" %>
              </li>

              <li class="nav-item">
                <%= link_to "Medical Records", pet_medical_records_path(@pet), class:"nav-link" %>
              </li>

              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Logout", sessions_path, method: :delete, class:"nav-link" %>
              </li>
              <% else %>
              <li class="nav-item"><%= link_to "Sign Up", new_user_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "Login", new_session_path, class:"nav-link" %> </li>

              <% end %>


            </ul>
          </div>
        </nav>
      </div>
    </div>






    <%= yield %>
  </body>
</html>
