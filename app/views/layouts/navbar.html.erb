<!DOCTYPE html>
<html>
  <head>
    <title>Puppy Pad</title>
    <%= csrf_meta_tags %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <!-- <link href="assets/css/themify-icons.css" rel="stylesheet"> -->

    <!--  Google Maps -->
    <!-- AIzaSyC6Wjop1KflRdaLa-p4GZV3eXkIOkG4K6U -->
    <script src="//maps.google.com/maps/api/js?key=AIzaSyC6Wjop1KflRdaLa-p4GZV3eXkIOkG4K6U"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->



  </head>

  <body>

    <div id="navbar-styling">
      <div class="container">
        <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
          <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span><i class="fa fa-bars"></i>
              </button>
              <a class="navbar-brand page-scroll" href="/pets">PUPPY PAD</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav navbar-right">
                <% @pets.each do |p| %>
                <li>
                  <%= link_to p.name, pet_path(p) %>
                </li>
                <% end %>
                <li>
                  <%#= link_to "Add a Photo", new_pet_pet_photo_path(@pet) %>
                  <%#= link_to "Add a Photo", "", data: {toggle:"modal", target: "#myModal"} %>
                </li>
                <% if user_signed_in? %>
                <li>
                  <%= link_to "Logout", sessions_path, method: :delete %>
                </li>
                <% else %>
                  <li><%= link_to "Sign Up", new_user_path %></li>
                  <li><%= link_to "Login", new_session_path %> </li>

                <% end %>
                <li>

                </li>
              </ul>
            </div>
            <!-- /.navbar-collapse -->
          </div>
          <!-- /.container-fluid -->
        </nav>
      </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= render 'addphoto' %>
          </div>
        </div>
      </div>
    </div>


    <%= yield %>
  </body>
</html>
