<div id="login-style">
  <div>
    <img src="/puppypad.png">
  </div>
    <span>
    <h2>Sign In</h2>
    <br>
    <%= flash[:alert] %>

    <%= form_tag sessions_path do %>

      <div class='form-group'>
        <div class='row'>
          <%= email_field_tag :email, nil, class:'form-control'%>
        </div>
      </div>

      <div class='form-group'>
        <div class='row'>
            <%= password_field_tag :password, nil, class:'form-control'%>
        </div>
      </div>

      <div class='form-group'>
        <div class='row'>
          <%= submit_tag 'Sign In', class:'btn btn-primary'%>
        </div>
      </div>

    <%end%>
</div>
