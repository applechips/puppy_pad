<%= form_for(pet_pet_photos_path(@pet, @pet_photo)) do |f| %>

  <div>
    <%= f.label :caption, :class => 'control-label' %>
    <%= f.text_field :caption %>
  </div>
  <div>
    <%= f.label :date, :class => 'control-label' %>
    <%= f.date_field :date %>
  </div>
  <div>
    <%= f.label :address, :class => 'control-label' %>
    <%= f.text_field :address, :placeholder => "Address, City, Province", :class => 'address-field'%>
  </div>
  <div>
    <%= f.label :images, :class => 'control-label' %>
    <%= f.file_field :images, type: :file, multiple: true %>
  </div>
  <%= f.submit "submit", :class => "btn btn-default" %>

 <% end %>
