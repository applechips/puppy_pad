<div id="medical-record-table">
  <div class="container">
    <h2>Medical Records</h2>
    <table class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Weight</th>
        <th>Condition/Procedure</th>
        <th>Charges</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @medical_records.each do |m| %>
      <tr>
        <td><%= m.date %></td>
        <td><%= m.weight %></td>
        <td><%= m.condition_procedure %></td>
        <td><%= m.charges %></td>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
